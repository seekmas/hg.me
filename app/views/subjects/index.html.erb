<div class="panel">
<h1>Listing subjects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Description</th>
      <th>User</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%=image_tag subject.photo.url(:thumb) %></td>
        <td><%=subject.id%> . <%= subject.description %></td>
        <td><%= subject.user_id %></td>
        <td><%= subject.topic_id %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path %>
</div>